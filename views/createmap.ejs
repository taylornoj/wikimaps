  <title>Create a Map</title>


  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
  <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
  <link rel="stylesheet" href="/styles/main.css" type="text/css" />
  <link rel="stylesheet" href="/styles/layout.css" type="text/css" />
  <link rel="stylesheet" href="/styles/header.css" type="text/css" />
  <link rel="stylesheet" href="/styles/createmap.css" type="text/css" />




  <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
  <script type="text/javascript" src="/scripts/app.js"></script>

</head>

<body>



  <%- include('partials/_header') %>





  <main>


    <div id="map1" style="width: 100%; height: 300px"></div>

    <div class="create-pin-maps">
      <div class="create-form">
        <form class="form-class" action="" method="">
          <div class="form-element">
            <h4>Create your Map</h4>
            <label for="mapTitle" class="form-label">Map Title:</label>
            <input type="text" class="form-control" id="map-title" placeholder="Map title">
          </div>
          <div class="form-element">
            <label for="mapDescription" class="form-label">Map Description:</label>
            <textarea type="text" class="form-control" id="map-description" placeholder="Description of your map..."></textarea>

            <div>
              <label for="longitude" class="form-label">Longitude:</label>
              <input type="text" class="form-control" id="longitude" placeholder="Longitude"></input>
            </div>

            <div>
              <label for="latitude" class="form-label">Latitude:</label>
              <input type="text" class="form-control" id="latitude" placeholder="Latitude"></input>
            </div>


            <br>
            <button type="submit" class="btn btn-primary">Create Map</button>
          </form>
          </div>
        </div>



          <div class="pin-element">
            <form class="form-class" action="" method="">
              <h4>Add a Marker üìç</h4>
              <label for="pinTitle" class="form-label">Marker Title:</label>
              <input type="text" class="form-control" id="pin-title" placeholder="Marker title">
              <div class="form-element">
                <label for="pinDescription" class="form-label">Marker Description:</label>
                <textarea type="text" class="form-control" id="pin-description" placeholder="Description of your Marker..."></textarea>
              </div>
              <div class="form-element">
                <label for="pinPicture" class="form-label">Marker Picture:</label>
                <input type="text" class="form-control" id="pin-img" placeholder="Enter Image URL">

                <div>
                  <label for="longitude" class="form-label">Longitude:</label>
                  <input type="text" class="form-control" id="longitude" placeholder="Longitude"></input>
                </div>

                <div>
                  <label for="latitude" class="form-label">Latitude:</label>
                  <input type="text" class="form-control" id="latitude" placeholder="Latitude"></input>
                </div>
                <br>
                <button type="submit" class="btn btn-primary">Create Marker</button>
              </div>
            </div>
          </form>


  </main>











