  <title>Create a Map</title>
  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
  <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
  <link rel="stylesheet" href="/styles/main.css" type="text/css" />
  <link rel="stylesheet" href="/styles/layout.css" type="text/css" />
  <link rel="stylesheet" href="/styles/header.css" type="text/css" />
  <link rel="stylesheet" href="/styles/createmap.css" type="text/css" />



  <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
  <script type="text/javascript" src="/scripts/app.js"></script>

</head>

<body>
  <%- include('partials/_header') %>
  <main>
    <div class="create-form">
      <form action="" method="">
        <div class="form-element">
          <h4>Create your Map</h4>
          <label for="mapTitle" class="form-label">Map Title:</label>
          <input type="text" class="form-control" id="map-title" placeholder="Map title">
        </div>
        <div class="form-element">
          <label for="mapDescription" class="form-label">Map Description:</label>
          <textarea type="text" class="form-control" id="map-description" placeholder="Description of your map..."></textarea>
        </div>
      </div>
    </form>


    <form action="" method="">
    <div class="pin-element">
      <h4>Add a Pin üìç</h4>
      <label for="pinTitle" class="form-label">Pin Title:</label>
      <input type="text" class="form-control" id="pin-title" placeholder="Pin title">
      <div class="form-element">
        <label for="pinDescription" class="form-label">Pin Description:</label>
        <textarea type="text" class="form-control" id="pin-description" placeholder="Description of your pin..."></textarea>
      </div>
      <div class="form-element">
        <label for="pinPicture" class="form-label">Pin Picture:</label>
        <input type="text" class="form-control" id="pin-img" placeholder="Enter Image URL">
      </div>
    </div>
  </form>









  </main>
</body>
</html>
