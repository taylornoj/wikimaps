<body>
  <%- include('partials/_header') %>
  <main>
  <div class="home-title">
    <h3>My Maps</h3>
  </div>

    <div class="map-cards">

    <% for(let card in cards) { %>

    <div class="row">
      <div class="card" style="width: 18rem;">

        <div class="map-class" data-lon=<%= cards[card].longitude %>
          data-lat=<%= cards[card].latitude %> id=<%= card %>
          style="width: 100%; height: 300px"></div>

      <div class="card-body">
        <h5 class="card-title"><%= cards[card].title %></h5>
        <p class="card-text"><%= cards[card].description %></p>
        <div class="mapbuttons">



        <form method="GET" action="/edit_map/<%= cards[card].id %>">
          <button class="btn btn-primary" type="submit">
            Edit
          </button>
        </form>

        <!-- <a href="edit_map" class="btn btn-primary">Edit</a> -->



        <div class="heart-container">
          <i class="far fa-heart"></i>
        </div>

        <script>
          let btn = document.getElementById('btn');

          function Toggle(){
            if(btn.classList.contains("far")) {
              btn.classList.remove("far");
              btn.classList.add("fas");
            }
          }
        </script>

          <form method="POST" action="/delete/<%= cards[card].id %>">
            <button class="btn btn-danger" type="submit">Delete</button>
          </form>

        </div>
      </div>
    </div>
  </div>

  <% } %>

</div>

</main>





